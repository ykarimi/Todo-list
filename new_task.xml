<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    >
    <TextView
        android:id="@+id/new_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        />
    <EditText
        android:id="@+id/title_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/new_title"
        android:maxLines="1"
        android:ellipsize="end"
        android:lines="1" />

    <TextView
        android:id="@+id/new_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_edit_text"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="5dp"
        />
    <Button
        android:id="@+id/attachment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/new_description"
        app:layout_constraintBottom_toBottomOf="@id/new_description"
        android:background="@drawable/attach_icon"
        android:scaleX="0.3"
        android:scaleY="0.4"
        />
    <EditText
        android:id="@+id/des_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/new_description"
        android:inputType="textMultiLine"
        />
    <Button
        android:id="@+id/save_button"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintHorizontal_weight="1"
        android:text="ذخیره"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/cancel_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        android:background="@color/lime"
        />
    <Button
        android:id="@+id/cancel_button"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintHorizontal_weight="1"
        android:text="بی‌خیال"
        app:layout_constraintRight_toLeftOf="@id/save_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        android:background="@color/red"
        />

</android.support.constraint.ConstraintLayout>